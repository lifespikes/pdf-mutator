{
    "extends": "./_tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "noEmit": false,
        "module": "commonjs",
        "target": "ES2021",
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
